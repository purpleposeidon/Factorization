#!/bin/bash

set -e

echo Packaging client
./update_info.py
#./build_core_mod

cd ../


pushd reobf/minecraft  > /dev/zero
  cp -R ../../factorization/texture/ factorization/texture/
  cp ../../factorization/*.info ./
  rm -rf factorization/texture/ignore/
  jar -cf ~/Dropbox/dev/Factorization-dev.jar *.info factorization/
  #jar -cf ~/Dropbox/dev/Factorization-dev.jar *Factorization*.class *.info factorization/
popd > /dev/zero
pushd ~/mc/
  ./install modded-1.3
popd
cp ~/Dropbox/dev/Factorization-dev.jar ~/.minecraft/mods/

#echo Packaging server
#pushd reobf/minecraft_server > /dev/zero
#  jar -cf ~/Dropbox/dev/Factorization_server-dev.jar *Factorization*.class factorization/
#popd > /dev/zero


